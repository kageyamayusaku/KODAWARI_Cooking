<div class="container">
  <div class="row justify-content-center mt-3">
    <h1>こだわりCooking</h1>
  </div>
  <div class="row mt-3">

  <!------------ 画像表示 -------------->
    <div class="col-6">
      <h4>おすすめレシピ</h4>
      <div class="slider-container">
        <% @random_recipes.each_with_index do |recipe, index| %>
          <%= image_tag url_for(recipe.recipe_image), alt: "Image #{index + 1}", class: "slider-image #{'visible' if index.zero?}" %>
        <% end %>
      </div>
    </div>

  <!------------ 検索フォーム -------------->
    <div class="col-6">
      <%= render 'layouts/search', recipes: @recipes %>
    </div>
  </div>
  <div class="row mt-3">

  </div>
</div>