<div class="container">
  <div class="row justify-content-center mt-3">
    <h1>こだわりCooking</h1>
  </div>
  <div class="row mt-3">

  <!------------ 画像表示 -------------->
    <div class="col-6">
      <h4>おすすめレシピ</h4>
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% @random_recipes.each_with_index do |recipe, index| %>
            <% if index == 0 %>
            <div class="carousel-item active">
            <% else %>
            <div class="carousel-item">
            <% end %>
              <%= image_tag url_for(recipe.recipe_image), alt: "Image #{index + 1}", class: "slider-image" %>
            </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

  <!------------ 検索フォーム -------------->
    <div class="col-6">
      <%= render 'layouts/search', recipes: @recipes %>
    </div>
  </div>

  <!------------ 一週間の献立 -------------->
  <div class="row mt-3">
    <h4>一週間の献立</h4>
  </div>
  <div class="row mt-3">
    <div class="d-flex flex-wrap">
      <% @random_recipes_week.each_with_index do |recipe, index| %>
      <div class="mr-3">
        <h4>
          <%= @today.strftime('%-m/%-d') %>（<%= I18n.t('date.abbr_day_names')[@today.wday] %>）
        </h4>
        <%= image_tag url_for(recipe.recipe_image), alt: "Image #{index + 1}", :width => '260', :height => 'auto' %>
      </div>
      <% @today = @today + 1 %>
      <% end %>
    </div>
  </div>
</div>