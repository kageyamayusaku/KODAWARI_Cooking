<div class="container">
  <%= form_with model: @recipe, url: recipes_path, method: :post do |f| %>
  <div class="row" style="margin-top:50px;">
    <div class="form-group">
      <%= f.text_field :title, class: "form-control form-control-lg", placeholder: "タイトル入力" %>
    </div>
  </div>
  <div class="row">
    <div class="col-5">
      <div class="form-group">
        <%= f.file_field :recipe_image, class: "form-control-file", accept: "image/*" %>
      </div>
    </div>
    <div class="col-7">
      <div class="form-group">

      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-group">
      <%= f.label :ジャンル %><br>
      <%= f.collection_select(:genre_id, Genre.all, :id, :name, {include_blank: '選択する'}) %>
    </div>
    <div class="form-group">

    </div>
  </div>
  <div class="row">
    <div class="form-group">
      <%= f.label :商品説明 %><br>
      <%= f.text_area :introduction, class: "form-control", placeholder: "説明文を書きましょう。" %>
    </div>
  </div>
  <div class="row">
    <div class="form-group">

    </div>
  </div>
  <div class="row justify-content-center mt-5">
    <div class="actions">
      <%= f.submit 'レシピ投稿', class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>