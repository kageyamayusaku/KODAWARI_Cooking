<div class="container">
  <div class="row justify-content-end mt-5">
    <h4>レシピ名で探す</h4>
    <%= form_tag(recipes_path, method: :get) do %>
      <%= text_field_tag :search_recipe, params[:search_recipe], placeholder: "料理名を入力してください" %>
      <%= submit_tag 'レシピ検索', :name => nil %>
    <% end %>
  </div>

  <div class="row justify-content-end mt-2">
    <h4>ジャンルで探す</h4>
    <%= form_tag(recipes_path, method: :get) do %>
      <%= collection_select(nil, :search_genre, Genre.all, :id, :name, {include_blank: '選択する'}) %>
      <%= submit_tag 'ジャンル検索', :name => nil %>
    <% end %>
  </div>

  <div class="row justify-content-end mt-2">
    <h4>タグで探す</h4>
    <%= form_with url: recipes_path, method: :get, local: true do |form| %>
      <%= form.collection_select(:tag_ids, Tag.all, :id, :name, { include_blank: '選択する' }) %>
      <%= form.submit 'タグ検索' %>
    <% end %>
  </div>

</div>